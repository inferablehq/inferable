{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
